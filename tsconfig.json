{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",             
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src", "migrations"],
  "exclude": ["node_modules", "dist"]
}
